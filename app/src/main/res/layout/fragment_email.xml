<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".uipages.EmailFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v7.widget.CardView
            android:layout_width="579dp"
            android:layout_height="282dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Send Email to:"
                    android:textSize="30dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/alive_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Alive" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/dead_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dead" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/frozen_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Frozen" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/purged_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Purged" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/withdrow_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Withdrown" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?android:attr/listDivider" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/filter_button_theme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="326dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="@color/autoCompleteHintColor">


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email_subject_view"
                        android:layout_width="337dp"
                        android:layout_height="wrap_content"
                        android:hint="Type subject"
                        android:textColor="@color/autoCompleteHintColor" />

                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/reply_button"
                    app:srcCompat="@android:drawable/ic_menu_send"
                    android:layout_width="77dp"
                    android:layout_height="match_parent" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?android:attr/listDivider" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="319dp"
            android:background="@color/colorPrimary"
            android:paddingVertical="@dimen/activity_horizontal_margin">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="342dp"
                android:background="@color/colorPrimary">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email_body_View"
                    android:layout_width="match_parent"
                    android:layout_height="267dp"
                    android:hint="Type your text here"
                    android:textColor="@color/autoCompleteHintColor" />

            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>




</FrameLayout>